<h1>Cart</h1>
<ul>
  <% @cart.order_items.each do |order_item| %>
    <li>Item: <%= order_item.product.name %>/ Price: <%= number_to_currency(order_item.product.price) %>/ Quantity: <%= order_item.quantity %>/ Total Price: <%= number_to_currency(order_item.total_price) %>
      <ul>
        <li>
          <%= link_to "Add 1", order_item_add_path(id: order_item), method: :post %>
        </li>
        <li>
          <%= link_to "Reduce 1", order_item_reduce_path(id: order_item), method: :post %>
        </li>
        <li>
          <%= button_to "Remove item", order_item_destroy_path(order_item),method: :delete %>
        </li>
      </ul>
    </li>
  <% end%>
</ul>
<h3>Sub total: <%= number_to_currency(@cart.sub_total) %></h3>
# See Order section below for explanation of new_order_path
<%= link_to "Proceed to checkout", new_order_path %><br>
#
<%= button_to "Empty cart", cart_empty_path,method: :delete, data: {confirm: "Are you sure?"}%>
